<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#DD2C00"
    tools:context=".view.retrofit.PokemonDetailFragment">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin_value"
        android:textColor="@color/white"
        style="?attr/textAppearanceHeadline4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Pikachu"/>
    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin_value"
        android:textColor="@color/white"
        style="?attr/textAppearanceHeadline6"
        android:paddingVertical="@dimen/common_margin_value"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="ELECTR"/>
    <TextView
        android:id="@+id/tv_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin_value"
        android:textColor="@color/white"
        style="?attr/textAppearanceSubtitle2"
        app:layout_constraintTop_toBottomOf="@id/tv_type"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="44ft"/>
    <TextView
        android:id="@+id/tv_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin_value"
        android:textColor="@color/white"
        style="?attr/textAppearanceSubtitle2"
        app:layout_constraintTop_toBottomOf="@id/tv_height"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="0.4"/>

    <ImageView
        android:id="@+id/img_front"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="@dimen/common_margin_value"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@mipmap/ic_launcher_round"/>
    <ImageView
        android:id="@+id/img_back"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/common_margin_value"
        android:layout_marginEnd="@dimen/common_margin_value"
        app:layout_constraintTop_toBottomOf="@id/img_front"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@mipmap/ic_launcher_round"/>


    <TextView
        android:id="@+id/tv_description"
        style="?attr/textAppearanceSubtitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin_value"
        android:background="@drawable/tv_background"
        android:padding="@dimen/common_margin_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_back"
        tools:text="@tools:sample/lorem/random" />

</androidx.constraintlayout.widget.ConstraintLayout>